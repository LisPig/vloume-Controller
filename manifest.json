{
  "name": "VolumeController",
  "version": "0.0.1",
  "manifest_version": 3,
  
  "description": "",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://cdn.jsdelivr.net/*",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "background":{
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.chrome/*"],
      "js": ["content_script.js"],
      "css": ["dist/tailwind.css"],
      "run_at": "document_end"
    }
  ]
}